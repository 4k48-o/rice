# Application Settings
APP_NAME=FastAndtAdmin
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/fast_andt_react_admin
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# Security
# IMPORTANT: Change this to a random string (at least 32 characters) in production!
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_EXPIRE_DAYS=30
PASSWORD_REQUIRE_COMPLEXITY=true
SINGLE_SESSION_MODE=false

# Snowflake ID Generator
SNOWFLAKE_DATACENTER_ID=0
SNOWFLAKE_WORKER_ID=0
SNOWFLAKE_EPOCH=1609459200000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Admin User (for initial setup)
ADMIN_PASSWORD=admin123
